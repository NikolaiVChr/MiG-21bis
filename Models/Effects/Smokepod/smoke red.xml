<PropertyList>
  
  <particlesystem>
    <name>red smoke</name>

    <texture>smoke.png</texture>

    <condition>
	  <equals>
		<property>sim/multiplay/generic/int[19]</property>
		<value>2</value>
	</equals>
	  <equals>
            <property>sim/multiplay/generic/string[13]</property>
            <value>Smokepod</value>
       </equals>
    </condition>

    <emissive>false</emissive>
    <lighting>false</lighting>
    <align>billboard</align> <!-- billboard / fixed -->
    <attach>world</attach> <!-- world / local-->

    <placer>
      <type>point</type> <!-- sector / segments / point -->
    </placer>

    <shooter>
      <theta-min-deg>10</theta-min-deg>
      <theta-max-deg>86</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>8</phi-max-deg>
      <speed-mps>
        <value>0</value>
        <spread>0</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>5</x-min-deg-sec>
        <y-min-deg-sec>5</y-min-deg-sec>
        <z-min-deg-sec>5</z-min-deg-sec>
        <x-max-deg-sec>60</x-max-deg-sec>
        <y-max-deg-sec>60</y-max-deg-sec>
        <z-max-deg-sec>60</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>250</value>
        <spread>2</spread>
      </particles-per-sec>
    </counter>

    <particle>
      <start>
        <color>
          <red><value>0.9</value></red>
          <green><value>0.15</value></green>
          <blue><value>0.15</value></blue>
          <alpha><value>0.03</value></alpha>
        </color>
        <size>
          <value>1</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>0.9</value></red>
          <green><value>0.35</value></green>
          <blue><value>0.35</value></blue>
          <alpha><value>0.00000001</value></alpha>
        </color>
        <size>
          <value>45</value>
        </size>
      </end>

      <life-sec>
        <value>30</value>
      </life-sec>
       
      <mass-kg>0.001</mass-kg>
      <radius-m>1.0</radius-m>
	</particle>
     
    <program>
      <fluid>air</fluid>         <!-- air / water -->
      <gravity>false</gravity>
      <wind>true</wind>
    </program>
     
  </particlesystem>

  
</PropertyList>