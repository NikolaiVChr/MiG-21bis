    <!--test button-->

    <animation>
        <type>pick</type>
        <object-name>rwrTestButton</object-name>
        <action>
            <button>0</button>
            <button>1</button>
            <repeatable>false</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/rwr/self-test</property>
                <value>1</value>
            </binding>
            <mod-up>
            <binding>
                <command>property-assign</command>
                <property>/instrumentation/rwr/self-test</property>
                <value>0</value>
            </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>rwrTestButton</object-name>
        <property>/instrumentation/rwr/self-test</property>
        <factor>0.001</factor>
        <offset-m>0</offset-m>
        <axis>
            <x>-0.92</x>
            <y>0.00</y>
            <z>-0.08</z>
