<?xml version="1.0"?>
<PropertyList>

    <path>rwr.ac</path>

	<!--lights-->
	<!--yellow lights are day, red lights are night-->

	<!--yellow-->

	<animation>
        <type>material</type>
        <object-name>rwrYellowUL</object-name>
        <condition>
			<or>
				<and>
					<not>
						<greater-than>
							<property>/sim/time/sun-angle-rad</property>
							<value>1.57</value>
						</greater-than>
					</not>
					<equals>
						<property>/instrumentation/rwr/forward-left/light-enable</property>
						<value>1</value>
					</equals>
				</and>
				<equals>
					<property>/instrumentation/rwr/self-test</property>
					<value>1</value>
				</equals>
			</or>
		</condition>
		<emission>
            <red>0.8</red>
            <green>0.6</green>
            <blue>0.1</blue>
        </emission>
	</animation>

