<?xml version="1.0"?>
<PropertyList>

    <path>radio.ac</path>

	<!--lights-->
	
	<animation>
			<type>material</type>
				<object-name>ils1</object-name>
				<object-name>ils10</object-name>
				<object-name>vor1</object-name>
				<object-name>vor10</object-name>
			<emission>
				 <red>0.6</red>
				 <green>0.3</green>
				 <blue>0.3</blue>
				<factor-prop>controls/lighting/instruments-norm</factor-prop>
			</emission> 
	</animation>
	
	
	<animation>
        <type>material</type>
        <object-name>lightAzm</object-name>
        <condition>
			<equals>
				<property>/instrumentation/nav/data-is-valid</property>
				<value>1</value>
			</equals>
			<equals>
				<property>/instrumentation/nav/in-range</property>
				<value>1</value>
			</equals>
		</condition>
		<ambient>
			<red>0.0</red>
			<green>0.2</green>
			<blue>0.0</blue>
		</ambient>
        <emission>
            <red>0</red>
            <green>1</green>
            <blue>0</blue>
        </emission> 
    </animation>

    <animation>
        <type>material</type>
        <object-name>lightAzm</object-name>
        <condition>
        	<not>
				<equals>
					<property>/instrumentation/nav/data-is-valid</property>
					<value>1</value>
				</equals>
				<equals>
					<property>/instrumentation/nav/in-range</property>
					<value>1</value>
				</equals>
			</not>
		</condition>
		<ambient>
			<red>0.0</red>
			<green>0.2</green>
			<blue>0.0</blue>
		</ambient>
        <emission>
            <red>0</red>
            <green>0</green>
            <blue>0</blue>
        </emission> 
    </animation>
	
	<animation>
        <type>material</type>
        <object-name>lightDist</object-name>
        <condition>
			<equals>
                <property>/instrumentation/nav/data-is-valid</property>
                <value>1</value>
            </equals>
            <equals>
                <property>/instrumentation/nav/in-range</property>
                <value>1</value>
            </equals>
            <equals>
                <property>/instrumentation/nav/dme-in-range</property>
                <value>1</value>
            </equals>
		</condition>
		<ambient>
			<red>0.0</red>
			<green>0.2</green>
			<blue>0.0</blue>
		</ambient>
        <emission>
            <red>0</red>
            <green>1</green>
            <blue>0</blue>
        </emission> 
    </animation>	
	
	<!-- picks and translations -->
	
	<animation>
		<type>pick</type>
		<object-name>knobVor</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/vor-radio/selection</property>
				<step>1</step>
				<min>0</min>
				<max>20</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/vor-radio/selection</property>
				<step>-1</step>
				<min>0</min>
				<max>20</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<object-name>knobVor</object-name>
		<type>rotate</type>
		<property>/instrumentation/vor-radio/selection</property>
		<factor>30</factor>
		<offset-deg></offset-deg>
		<center>
			<x-m> 0.00002</x-m>
			<y-m>-0.02534</y-m>
			<z-m>-0.05373</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>knobIls</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/ils-radio/selection</property>
				<step>1</step>
				<min>0</min>
				<max>20</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.3</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/ils-radio/selection</property>
				<step>-1</step>
				<min>0</min>
				<max>20</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<object-name>knobIls</object-name>
		<type>rotate</type>
		<property>/instrumentation/ils-radio/selection</property>
		<factor>30</factor>
		<offset-deg></offset-deg>
		<center>
			<x-m> 0.00002</x-m>
			<y-m> 0.05256</y-m>
			<z-m>-0.05373</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>knobVolume</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.04</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/volume</property>
				<step>0.02</step>
				<min>0</min>
				<max>1.1</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.04</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/volume</property>
				<step>-0.02</step>
				<min>0</min>
				<max>1.1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<object-name>knobVolume</object-name>
		<type>rotate</type>
		<property>/instrumentation/nav[0]/volume</property>
		<factor>300</factor>
		<offset-deg></offset-deg>
		<center>
			<x-m> 0.00002</x-m>
			<y-m>-0.06855</y-m>
			<z-m> 0.02246</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>buttonreset</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<repeatable>false</repeatable>
			<interval-sec>0.2</interval-sec>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/dead-reckoner/reset</property>
				<value>1</value>
			</binding>
			<mod-up>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/dead-reckoner/reset</property>
				<value>0</value>
			</binding>
			</mod-up>
		</action>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>buttonreset</object-name>
		<property>/instrumentation/dead-reckoner/reset</property>
		<factor>0.001</factor>
		<offset-m>0</offset-m>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>switchDist</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/dead-reckoner/switch-dist-pos</property>
				<value>1</value>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/dead-reckoner/distance-adjust</property>
				<step>0.45</step>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>/instrumentation/dead-reckoner/switch-dist-pos</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/dead-reckoner/switch-dist-pos</property>
				<value>-1</value>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/dead-reckoner/distance-adjust</property>
				<step>-0.45</step>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>/instrumentation/dead-reckoner/switch-dist-pos</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>

	<animation>
		<object-name>switchDist</object-name>
		<type>rotate</type>
		<property>/instrumentation/dead-reckoner/switch-dist-pos</property>
		<factor>30</factor>
		<offset-deg></offset-deg>
		<center>
			<x-m>-0.00157</x-m>
			<y-m> 0.03025</y-m>
			<z-m> 0.02283</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>switchBrng</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/dead-reckoner/switch-azm-pos</property>
				<value>1</value>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/dead-reckoner/azimuth-adjust</property>
				<step>1</step>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>/instrumentation/dead-reckoner/switch-azm-pos</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.05</interval-sec>
			<binding>
				<command>property-assign</command>
				<property>/instrumentation/dead-reckoner/switch-azm-pos</property>
				<value>-1</value>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/dead-reckoner/azimuth-adjust</property>
				<step>-1</step>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>/instrumentation/dead-reckoner/switch-azm-pos</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>

	<animation>
		<object-name>switchBrng</object-name>
		<type>rotate</type>
		<property>/instrumentation/dead-reckoner/switch-azm-pos</property>
		<factor>30</factor>
		<offset-deg></offset-deg>
		<center>
			<x-m>-0.00157</x-m>
			<y-m> 0.05101</y-m>
			<z-m> 0.02283</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- texture translations -->

	<animation>
		<type>textranslate</type>
		<object-name>vor10</object-name>
		<property>/instrumentation/vor-radio/selection</property>
		<bias>1.0001</bias>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>vor1</object-name>
		<property>/instrumentation/vor-radio/selection</property>
		<bias>0.0001</bias>
		<factor>0.1</factor>
		<step>1.0</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>ils10</object-name>
		<property>/instrumentation/ils-radio/selection</property>
		<bias>1.0001</bias>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>ils1</object-name>
		<property>/instrumentation/ils-radio/selection</property>
		<bias>0.0001</bias>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
		</axis>
	</animation>
</PropertyList>