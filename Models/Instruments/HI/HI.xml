<?xml version="1.0"?>

<PropertyList>

    <path>hi_new.ac</path>

    <animation>
        <type>material</type>
        <object-name>HIadfBack</object-name>
		<object-name>HIadfFwd</object-name>
		<object-name>HIazimuth</object-name>
		<object-name>HIazimuthNeedle</object-name>
		<object-name>HIcompass</object-name>
		<object-name>HIfromFlag</object-name>
		<object-name>HIglideslopeNeedle</object-name>
		<object-name>HIinnerbevel</object-name>
		<object-name>HItoFlag</object-name>
		<object-name>bearingNeedle</object-name>
		<object-name>radialNeedle</object-name>
        <emission>
            <red>0.6</red>
            <green>0.3</green>
            <blue>0.3</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>HIcompass</object-name>
		<!--<object-name>courseFwd</object-name>
		<object-name>courseBack</object-name>-->
        <property>/instrumentation/gyro-compass/gyro-heading-deg</property>
        <factor>1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
        	<x-m>-0.00303</x-m>
        	<y-m>-0.00296</y-m>
        	<z-m> 0.00437</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>bearingNeedle</object-name>
        <property>/instrumentation/dead-reckoner/azimuth</property>
        <factor>-1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
        	<x-m>-0.00303</x-m>
        	<y-m>-0.00296</y-m>
        	<z-m> 0.00437</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>bearingNeedle</object-name>
        <property>/instrumentation/gyro-compass/gyro-heading-deg</property>
        <factor>1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
        	<x-m>-0.00303</x-m>
        	<y-m>-0.00296</y-m>
        	<z-m> 0.00437</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>radialNeedle</object-name>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <factor>-1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
        	<x-m>-0.00303</x-m>
        	<y-m>-0.00296</y-m>
        	<z-m> 0.00437</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>radialNeedle</object-name>
        <property>/instrumentation/gyro-compass/gyro-heading-deg</property>
        <factor>1</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
        	<x-m>-0.00303</x-m>
        	<y-m>-0.00296</y-m>
        	<z-m> 0.00437</z-m>
        </center>
    </animation>
	
	<animation>
        <type>translate</type>
        <object-name>HIazimuthNeedle</object-name>
        <property>/instrumentation/nav[0]/heading-needle-deflection-norm</property>
        <factor>.024</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>

        <min>-8</min>
        <max>8</max>
    </animation>
	
	<animation>
        <type>translate</type>
        <object-name>HIazimuthNeedle</object-name>
        <property>/instrumentation/nav[0]/gs-needle-deflection-norm</property>
        <factor>.024</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <min>-8</min>
        <max>8</max>
    </animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>HItoFlag</object-name>
		<property>/instrumentation/nav[0]/frequencies/is-localizer-frequency</property>
		<bias>0.0001</bias>
		<factor>0.029296875</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>HIfromFlag</object-name>
		<property>/instrumentation/nav[0]/gs-in-range</property>
		<bias>0.0001</bias>
		<factor>0.029296875</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
	
	<animation>
        <type>rotate</type>
        <object-name>HIknob</object-name>
        <property>/instrumentation/nav[0]/radials/selected-deg</property>
        <factor>-4</factor>
        <center>
	        <x-m> 0.01391</x-m>
	        <y-m> 0.03775</y-m>
	        <z-m>-0.05188</z-m>
        </center>
	    <axis>
	        <x>-1</x>
	        <y>0</y>
	        <z>0</z>
        </axis>
    </animation>

	<animation>
		<type>pick</type>
		<object-name>HIknob</object-name>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/radials/selected-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/radials/selected-deg</property>
				<step>10</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/radials/selected-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>/instrumentation/nav[0]/radials/selected-deg</property>
				<step>-10</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
    
<!-- Label text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">Heading Indicator</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.01</x-m>
		<y-m> 0.0 </y-m>
		<z-m> 0.0 </z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>1.0</red>
		<green>0.8</green>
		<blue>0.0</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>

</PropertyList>